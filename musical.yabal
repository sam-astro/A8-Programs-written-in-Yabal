                GetFreq()

                // Shift left
                freqVal = freqVal << 11

                // // Also add channel ID
                freqVal += 1024

                // Write note value to expansion port
                asm{
                    AIN @freqVal
                    WREXP
                }
            }


            // Delay for the next set of notes
            for (var l = 0; l < 9000; l++){
                for (var o = 0; o < 1; o++){
